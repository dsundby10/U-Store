        <activity android:name=".ManageUserPermissionsAddUser" />
        <activity android:name=".ManageUserPermissionsMainPage" />
        <activity android:name=".ManageUserPermissionsEditUser" />
        <activity android:name=".ManageUserPermissionsDeleteUser"></activity>
