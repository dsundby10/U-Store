<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image7"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Spinner
        android:id="@+id/product_spinner"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/product_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:text="Select a product to edit"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/product_spinner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_id"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_id"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/product_id"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Product ID"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/num_stock"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="# in Stock"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/product_id"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/product_id"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/product_id" />

    <Spinner
        android:id="@+id/dept_spinner"
        android:layout_width="0dp"
        android:layout_height="38dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/product_name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/product_name" />

    <EditText
        android:id="@+id/product_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:ems="10"
        android:hint="Product Desc..."
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout29"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/dept_spinner"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />




    <!--Linear layout holding AisleBayShelf Txt/Spinners -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:id="@+id/linearLayout29"
        android:layout_marginEnd="13dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="13dp">
        <!--TextView Linear Layout Aisle Bay Shelf -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="187dp">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginEnd="31dp"
                android:layout_marginStart="16dp"
                android:text="Aisle"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="187dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="Bay"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="187dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginEnd="17dp"
                android:layout_marginStart="23dp"
                android:layout_weight="0.42"
                android:text="Shelf"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="196dp"
                tools:layout_editor_absoluteY="187dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="207dp">
            <Spinner
                android:id="@+id/aisle_spinner"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="31dp"
                android:layout_marginStart="16dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="207dp" />

            <Spinner
                android:id="@+id/bay_spinner"
                android:layout_width="90dp"
                android:layout_height="30dp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="207dp" />

            <Spinner
                android:id="@+id/shelf_spinner"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="17dp"
                android:layout_marginStart="23dp"
                android:layout_weight="0.42"
                tools:layout_editor_absoluteX="196dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:text="Add / Edit Product Image"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />

    <!-- Left side image buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout35"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <Button
            android:id="@+id/upload_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape1"
            android:text="Upload"
            android:textColor="@color/textBackgroundColor"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="333dp" />

        <Button
            android:id="@+id/take_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape1"
            android:text="Camera"
            android:textColor="@color/textBackgroundColor"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="395dp" />
        <Button
            android:id="@+id/delete_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape1"
            android:textColor="@color/textBackgroundColor"
            android:text="Remove"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="400dp" />
    </LinearLayout>


    <!-- Bottom Button Linear Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout18"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/main_menu_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/buttonshape1"
            android:text="Main Menu"
            android:textColor="@color/textBackgroundColor"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="519dp" />

        <Button
            android:id="@+id/delete_product_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="120dp"
            android:layout_height="39dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonshape1"
            android:textColor="@color/textBackgroundColor"
            android:text="Delete Product"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/save_changes_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape1"
            android:textColor="@color/textBackgroundColor"
            android:text="Update"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="225dp"
        android:layout_height="190dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout18"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1" />


</android.support.constraint.ConstraintLayout>






