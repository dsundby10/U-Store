<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="accountlogin.registrationapp.AddInventory"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@+id/product_id"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_id"
        android:layout_marginEnd="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/product_id"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Product ID"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/num_stock"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="# in Stock"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/product_id"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/product_id"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/product_id" />

    <Spinner
        android:id="@+id/dept_spinner"
        android:layout_width="0dp"
        android:layout_height="39dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/product_name"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/product_name" />

    <EditText
        android:id="@+id/product_desc"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="Product Desc..."
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout36"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="58dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="61dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/num_stock"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:text="Add Product Image"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_editor_absoluteX="26dp"
        app:layout_editor_absoluteY="280dp"
        android:id="@+id/linearLayout35"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_btn"
        android:layout_marginStart="26dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp">

        <Button
            android:id="@+id/upload_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@color/appButtonColor"
            android:text="Upload"
            android:textSize="12sp"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="333dp" />

        <Button
            android:id="@+id/take_image_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@color/appButtonColor"
            android:text="Camera"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="395dp" />
    </LinearLayout>

    <Button
        android:id="@+id/main_menu_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@color/appButtonColor"
        android:text="Main Menu"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout35"
        app:layout_constraintRight_toRightOf="@+id/linearLayout35"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/save_changes_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@color/appButtonColor"
        android:text="Add Product"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="21dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/save_changes_btn"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout35"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />





















    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="170dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout35"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/num_stock"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="11dp"
        android:id="@+id/linearLayout36">

        <!--TextView Linear Layout Aisle Bay Shelf -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="187dp">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginEnd="31dp"
                android:layout_marginStart="16dp"
                android:text="Aisle"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="187dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="Bay"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="187dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginEnd="17dp"
                android:layout_marginStart="23dp"
                android:layout_weight="0.42"
                android:text="Shelf"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="196dp"
                tools:layout_editor_absoluteY="187dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="207dp">
            <Spinner
                android:id="@+id/aisle_spinner"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="31dp"
                android:layout_marginStart="16dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="207dp" />

            <Spinner
                android:id="@+id/bay_spinner"
                android:layout_width="90dp"
                android:layout_height="30dp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="207dp" />

            <Spinner
                android:id="@+id/shelf_spinner"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="17dp"
                android:layout_marginStart="23dp"
                android:layout_weight="0.42"
                tools:layout_editor_absoluteX="196dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>