<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="accountlogin.registrationapp.AddInventory"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/save_changes_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/appButtonColor"
        android:text="Add Product"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/take_image_btn"
        android:layout_marginBottom="26dp" />

    <Button
        android:id="@+id/upload_image_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/appButtonColor"
        android:text="Upload Image"
        android:textSize="10sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/take_image_btn"
        app:layout_constraintRight_toRightOf="@+id/take_image_btn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/take_image_btn" />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        app:layout_constraintRight_toLeftOf="@+id/product_id"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_id"
        android:layout_marginEnd="15dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

    <EditText
        android:id="@+id/product_id"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Product ID"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/num_stock"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="# in Stock"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/product_id"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/product_id"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/product_id" />

    <Spinner
        android:id="@+id/dept_spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/product_name"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/product_name" />

    <EditText
        android:id="@+id/product_desc"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:ems="10"
        android:hint="Product Desc..."
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="116dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="114dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Product Image"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/upload_image_btn"
        app:layout_constraintRight_toRightOf="@+id/upload_image_btn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/upload_image_btn"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/take_image_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/appButtonColor"
        android:text="Take Image"
        android:textSize="10sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="@+id/view_layout_btn"
        android:layout_marginTop="95dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="101dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="152dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="94dp"
        app:layout_constraintLeft_toRightOf="@+id/view_layout_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/view_layout_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="@color/appButtonColor"
        android:text="Main Menu"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/save_changes_btn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save_changes_btn"
        android:layout_marginLeft="16dp" />


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:weightSum="1"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="104dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="103dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dept_spinner"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="16dp"
            android:text="Aisle"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="243dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Bay"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="242dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="23dp"
            android:layout_weight="0.42"
            android:text="Shelf"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="241dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="13dp"
        android:orientation="horizontal"
        android:layout_marginStart="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="73dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_desc"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <Spinner
            android:id="@+id/aisle_spinner"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="223dp" />

        <Spinner
            android:id="@+id/bay_spinner"
            android:layout_width="90dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="223dp" />

        <Spinner
            android:id="@+id/shelf_spinner"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="23dp"
            android:layout_weight="0.42"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="241dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
