<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image7"
    tools:context="accountlogin.registrationapp.MainMenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/displayMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text='Welcome, "User Name" ...'
        android:textAlignment="center"
        android:textColor="@color/textBackgroundColor"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="7dp" />
    <!-- Create Store Linear Layout-->
    <LinearLayout
        android:id="@+id/createStoreLinearLayout"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayMessage"
        app:layout_editor_absoluteX="30dp"
        app:layout_editor_absoluteY="80dp">

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="Steps to Create a store"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/loginPageGreen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="1) Assign store name and departments"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="2) Specify number of Aisles and Bays"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="3) Assign Shelving to your bays"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Then you can ..."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/loginPageGreen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="-Add / Edit the above setup info"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="-View your auto-generated store layout"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="-Add / Edit inventory"
            android:textAllCaps="true"
            android:textStyle="bold" />


        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="-Add / Edit store employee App Permissions"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="-Search Inventory by location, department, keyword"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/create_store_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape1"
            android:text="Create Store"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="70dp" />

        <Button
            android:id="@+id/manage_create_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonshape1"
            android:text="Manage Account"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="141dp" />

        <Button
            android:id="@+id/logout_create_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonshape1"
            android:text="Logout"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="200dp" />
    </LinearLayout>

    <!--Main Menu Linear Layout-->
    <LinearLayout
        android:id="@+id/showStoreButtonsLinearLayout"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayMessage"
        app:layout_editor_absoluteX="30dp"
        app:layout_editor_absoluteY="70dp">

        <Button
            android:id="@+id/edit_ab_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape1"
            android:text="Modify Aisle / Bays"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="70dp" />

        <Button
            android:id="@+id/add_shelving_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Add/Edit Shelving"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/add_dept_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Add/Edit Departments"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="165dp" />

        <Button
            android:id="@+id/add_inv_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Add Inventory"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="213dp" />

        <Spinner
            android:id="@+id/search_inv_btn"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:popupBackground="@drawable/buttonshape1"
            android:text="Search Inventory By..."
            android:textAlignment="center"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="302dp" />

        <Button
            android:id="@+id/edit_inv_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Edit Inventory"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="257dp" />

        <Button
            android:id="@+id/edit_layout_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Edit Store Layout"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="348dp" />

        <Button
            android:id="@+id/main_menu_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:onClick="sendLogin"
            android:text="View Store Layout"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="392dp" />

        <Button
            android:id="@+id/acct_info_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Manage Acct"
            android:textColor="@color/textBackgroundColor"

            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="442dp" />

        <Button
            android:id="@+id/logout_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape1"
            android:text="Logout"
            android:textColor="@color/textBackgroundColor"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="442dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
