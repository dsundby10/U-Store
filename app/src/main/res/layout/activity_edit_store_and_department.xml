<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image7"
    tools:context="accountlogin.registrationapp.EditStoreAndDepartmentActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:id="@+id/linearLayout13">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="345dp"
            android:layout_height="23dp"
            android:text="Add a Department"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="40dp">

            <EditText
                android:id="@+id/add_dept_txt"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/dept_logo1"
                android:ems="10"
                android:hint="Add a Deptartment"
                android:inputType="textPersonName"
                android:textColorHint="@color/editTextHintColor"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="37dp" />

            <Button
                android:id="@+id/add_dept_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape1"
                android:text="Add"
                android:textColor="@color/textBackgroundColor"
                tools:layout_editor_absoluteX="266dp"
                tools:layout_editor_absoluteY="37dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="345dp"
            android:layout_height="28dp"
            android:layout_marginBottom="15dp"
            android:text="Edit A Department"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="270dp" />

        <Spinner
            android:id="@+id/edit_dept_spinner"
            android:layout_width="320dp"
            android:layout_height="33dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="305dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/change_dept_txt"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/dept_logo1"
                android:ems="10"
                android:hint="New Department Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/editTextHintColor"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="371dp" />

            <Button
                android:id="@+id/change_dept_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="91dp"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape1"
                android:text="Change"
                android:textColor="@color/textBackgroundColor"
                tools:layout_editor_absoluteX="266dp"
                tools:layout_editor_absoluteY="371dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="345dp"
            android:layout_height="27dp"
            android:text="Remove a Department"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="279dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/remove_dept_spinner"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="316dp" />

            <Button
                android:id="@+id/remove_dept_btn"
                android:layout_width="91dp"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape1"
                android:text="Remove"
                android:textColor="@color/textBackgroundColor"
                tools:layout_editor_absoluteX="266dp"
                tools:layout_editor_absoluteY="361dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/main_menu_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape1"
        android:text="Main Menu"
        android:textColor="@color/textBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
