<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="accountlogin.registrationapp.ShelvingSetup"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">
    <EditText
        android:id="@+id/num_shelves"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="# of Shelves"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/assign_shelves_btn"
        android:layout_marginTop="53dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="78dp" />

    <Button
        android:id="@+id/assign_shelves_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assign Shelves"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="23dp"
        android:layout_marginTop="102dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/num_shelves"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="23dp" />

    <Spinner
        android:id="@+id/aisle_num_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/bay_num_spinner"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/bay_num_spinner"
        android:layout_marginEnd="22dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bay_num_spinner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="22dp" />

    <Spinner
        android:id="@+id/bay_num_spinner"
        android:layout_width="154dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/num_shelves"
        app:layout_constraintRight_toRightOf="@+id/num_shelves"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/num_shelves" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="331dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp">

        <ListView
            android:id="@+id/listviewX"
            android:layout_width="333dp"
            android:layout_height="339dp" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
