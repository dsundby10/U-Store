<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image7"
    tools:context="accountlogin.registrationapp.ShelvingAddEditActivity"
    tools:layout_editor_absoluteY="45dp"
    tools:layout_editor_absoluteX="0dp">
    <!-- LINEAR LAYOUT OPTION 1 / VISIBLE -->
    <LinearLayout
        android:id="@+id/linearLayoutOption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/setupOptions">
        <!--Top Linear layout for TextViews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="89dp">

            <TextView
                android:id="@+id/aisleTextView"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text="Aisle"
                android:textColor="@color/textBackgroundColor"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="82dp" />

            <TextView
                android:id="@+id/bayTextView"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text="Bay"
                android:textColor="@color/textBackgroundColor"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="82dp" />
        </LinearLayout>


        <!-- Linear layout for Spinners / EditText / Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="109dp">

            <Spinner
                android:id="@+id/aisle_num_spinner"
                android:layout_marginBottom="5dp"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"/>

            <Spinner
                android:id="@+id/bay_num_spinner"
                android:layout_marginBottom="5dp"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginEnd="5dp"/>
            <EditText
                android:id="@+id/num_shelves"
                android:layout_marginBottom="5dp"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="Shelves"
                android:textColor="@color/textBackgroundColor"
                android:layout_marginEnd="10dp"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <Button
                android:id="@+id/assign_shelves_btn"
                android:layout_marginBottom="5dp"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape1"
                android:text="Assign"
                android:textColor="@color/textBackgroundColor" />

        </LinearLayout>
    </LinearLayout>
    <!-- LINEAR LAYOUT OPTION 2 / INVISIBLE -->
    <LinearLayout
        android:id="@+id/linearLayoutOption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupOptions">
        <!--Top Linear layout for TextViews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="89dp">

            <TextView
                android:id="@+id/aisleTextView2"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text="Aisle"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="82dp" />
        </LinearLayout>
        <!-- Linear layout for Spinners / EditText / Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="109dp">
            <Spinner
                android:id="@+id/aisle_num_spinner2"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"/>

            <EditText
                android:id="@+id/num_shelves2"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="Shelves"
                android:layout_marginBottom="5dp"
                android:textColor="@color/textBackgroundColor"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/assign_shelves_btn2"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:text="Assign"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape1"
                android:textColor="@color/textBackgroundColor" />
        </LinearLayout>
    </LinearLayout>
    <!-- LINEAR LAYOUT OPTION 3 / INVISIBLE -->
    <LinearLayout
        android:id="@+id/linearLayoutOption3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupOptions">
        <!--Top Linear layout for TextViews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="89dp">

            <TextView
                android:id="@+id/aisleTextView3"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:text=""
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="82dp" />
        </LinearLayout>
        <!-- Linear layout for Spinners / EditText / Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="109dp">

            <EditText
                android:id="@+id/num_shelves3"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="80dp"
                android:ems="10"
                android:hint="Shelves"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/assign_shelves_btn3"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="Assign"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape1"
                android:textColor="@color/textBackgroundColor"/>
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="139dp"
        android:layout_height="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Quick Shelf Setup"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/setupOptions"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonshape1"
        android:popupBackground="@drawable/buttonshape1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutOption1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:layout_constraintLeft_creator="1">

        <ListView
            android:id="@+id/listViewX"
            android:layout_width="match_parent"
            android:layout_height="340dp" />

        <!--Main Menu & View Layout Btn Linear Layout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/absetup_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/buttonshape1"
                android:text="Aisle / Bay Setup"
                android:textColor="@color/textBackgroundColor"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="450dp" />

            <Button
                android:id="@+id/main_menu_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/buttonshape1"
                android:textColor="@color/textBackgroundColor"
                android:text="Main Menu"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="450dp" />
        </LinearLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
