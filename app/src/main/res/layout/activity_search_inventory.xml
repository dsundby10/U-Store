<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_image7"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <Button
        android:id="@+id/main_menu_btn"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape1"
        android:text="Main Menu"
        android:textColor="@color/textBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/modify_btn"
        android:layout_marginTop="5dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:text="Seach Inventory By Location"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout19"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="37dp">

            <CheckBox
                android:id="@+id/checkBox0"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:text="Aisle"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="37dp" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:text="Bay"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="37dp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Shelf"
                tools:layout_editor_absoluteX="274dp"
                tools:layout_editor_absoluteY="37dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="80dp">

            <Spinner
                android:id="@+id/spinner0"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="72dp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="72dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="90dp"
                android:layout_height="35dp"
                tools:layout_editor_absoluteX="274dp"
                tools:layout_editor_absoluteY="72dp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/modify_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:text="Modify Search Filters"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="107dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent" />
    <!--CheckBoxes LinearLayout -->
    <LinearLayout
        android:id="@+id/checkbox_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/modify_btn"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        tools:layout_constraintLeft_creator="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/product_cbox"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:checked="true"
                android:text="Product"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="144dp" />

            <CheckBox
                android:id="@+id/pid_cbox"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:checked="true"
                android:text="Product ID"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="177dp" />

            <CheckBox
                android:id="@+id/stock_cbox"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:text="Stock"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="144dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/desc_cbox"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Descripton"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="251dp"
                tools:layout_editor_absoluteY="144dp" />

            <CheckBox
                android:id="@+id/image_cbox"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Image"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="177dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/location_cbox"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Location"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/department_cbox"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Department"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Listview LinearLayout-->
    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_btn"
        android:layout_marginRight="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        tools:layout_constraintLeft_creator="1">

        <TextView
            android:id="@+id/tvDisplayInfo"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:text="Displaying"
            android:textAlignment="center"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="207dp" />

        <ListView
            android:id="@+id/listViewX"
            android:layout_width="match_parent"
            android:layout_height="325dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>